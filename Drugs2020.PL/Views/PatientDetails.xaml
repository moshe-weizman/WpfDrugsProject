<UserControl x:Class="Drugs2020.PL.Views.PatientDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drugs2020.PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextWrapping="Wrap"
                   FontSize="28"
                   Text="{Binding ID , StringFormat=ID: {0}}"
                   Margin="20,20,0,20"
                   Height="60" />
        <TextBlock TextWrapping="Wrap"
                   FontSize="28"
                   Text="{Binding FirstName , StringFormat=First Name: {0}}"
                   Margin="20,20,0,20"
                   Height="60" />
        <TextBlock TextWrapping="Wrap"
                   FontSize="28"
                   Text="{Binding LastName , StringFormat=Last Name: {0}}"
                   Margin="20,20,0,20"
                   Height="60" />
        <TextBlock TextWrapping="Wrap"
                   FontSize="28"
                   Text="{Binding Age , StringFormat=Age: {0}}"
                   Margin="20,20,0,20"
                   Height="60" />
    </StackPanel>
</UserControl>
