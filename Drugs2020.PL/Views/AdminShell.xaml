<UserControl x:Class="Drugs2020.PL.Views.AdminShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drugs2020.PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>   
        <Image Grid.Column="1" 
               Source="/Images/medicine-panel.jpg" 
               Stretch="UniformToFill" />

        <StackPanel Orientation="Vertical">
            <Button Content="Patients" 
                    Command="{Binding ScreenReplacementCommand}"
                    CommandParameter="PATIENTS_MANAGEMENT"/>
            <Button Content="Physicians" />
            <Button Content="Drugs" />
            <Button Content="Statistics" />
        </StackPanel>
        <ContentControl Grid.Column="1" Content="{Binding CurrentVm}"/>
        

    </Grid>
</UserControl>
