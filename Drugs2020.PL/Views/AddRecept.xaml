<UserControl x:Class="Drugs2020.PL.Views.AddRecept"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drugs2020.PL.Views" xmlns:converters="clr-namespace:Drugs2020.PL.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:FieldsTextToBoolConverter x:Key="FieldsTextToBoolConverter" />
    </UserControl.Resources>
    <StackPanel>
        <TextBlock TextWrapping="Wrap" Text="Drug:"/>
        <TextBox x:Name="DrugTextBox" Height="23" TextWrapping="Wrap" Text="{Binding Recept.Drug}"/>

        <TextBlock TextWrapping="Wrap" Text="Quantity:"/>
        <TextBox x:Name="QuantityTextBox"  Height="23" TextWrapping="Wrap" Text="{Binding Recept.Quantity}"/>
        
        <TextBlock TextWrapping="Wrap" Text="Days:"/>
        <TextBox x:Name="DaysTextBox" Height="23" TextWrapping="Wrap" Text="{Binding Recept.Days}"/>
        
        <Button Content="PDF File" d:LayoutOverrides="Height" Margin="10"/>
        
        <Button Content="Add Recept" d:LayoutOverrides="Height" Margin="10" Command="{Binding AddToDbCommand}">
            <Button.CommandParameter>
                <MultiBinding Converter="{StaticResource FieldsTextToBoolConverter}">
                    <Binding Path="Text"
                                 ElementName="DrugTextBox" />
                    <Binding Path="Text"
                                 ElementName="QuantityTextBox" />
                    <Binding Path="Text"
                                 ElementName="DaysTextBox" />
                </MultiBinding>

            </Button.CommandParameter>
        </Button>
        
        <Button Content="Back" d:LayoutOverrides="Height" Margin="10" Command="{Binding BackCommand}"/>


    </StackPanel>
</UserControl>
