<UserControl x:Class="Drugs2020.PL.Views.ActionsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drugs2020.PL.Views"
             xmlns:local1="clr-namespace:Drugs2020.PL"

             mc:Ignorable="d" >
    
    <StackPanel Grid.Column="0" Margin="5">

        <Button Command="{Binding ScreenReplacementCommand}" CommandParameter="{x:Static local1:Screen.ADD_PATIENT_SCREEN }" Content="ADD PATIENT" HorizontalContentAlignment="Center" Margin="20,20,0,20"  Height="60" />
        <Button Command="{Binding ScreenReplacementCommand}" CommandParameter="{x:Static local1:Screen.ADD_PHYSICIAN_SCREEN}" Content="ADD PHYSICIAN" HorizontalContentAlignment="Center" Margin="20,20,0,20" Height="60" />
        <Button Command="{Binding ScreenReplacementCommand}" CommandParameter="{x:Static local1:Screen.ADD_DRUG}" Content="ADD DRUG" Margin="20,20,0,20" HorizontalContentAlignment="Center" Height="60"  />
        <Button Command="{Binding ScreenReplacementCommand}" CommandParameter="{x:Static local1:Screen.DATA}" Content="DATA" Margin="20,20,0,20" Height="60" Click="Button_Click" HorizontalContentAlignment="Center"/>

    </StackPanel>
</UserControl>
