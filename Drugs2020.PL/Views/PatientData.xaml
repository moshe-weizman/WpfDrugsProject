<UserControl x:Class="Drugs2020.PL.Views.PatientData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drugs2020.PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock TextWrapping="Wrap"  Text="{Binding Patient.ID}" Margin="20,20,0,20"  Height="60"/>
        <TextBlock TextWrapping="Wrap" Text="{Binding Patient.FirstName}" Margin="20,20,0,20"  Height="60"/>
        <TextBlock TextWrapping="Wrap" Text="{Binding Patient.LastName}" Margin="20,20,0,20"  Height="60"/>
        <TextBlock TextWrapping="Wrap" Text="{Binding Patient.Age}" Margin="20,20,0,20"  Height="60"/>


    </StackPanel>
</UserControl>
