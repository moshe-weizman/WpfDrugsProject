<UserControl x:Class="Drugs2020.PL.Views.PhysicianShell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Drugs2020.PL.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <!--<StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <TextBox x:Name="searchTextBox"
                     Width="150"
                     Margin="50,0,0,0" />
            <Button ToolTip="Search"
                    Command="{Binding SearchCommand}"
                    CommandParameter="{Binding ElementName=searchTextBox, Path=Text}">
                <Image Source="/Images/icons8-search-48.png" />
            </Button>
        </StackPanel>-->
        
        <TabControl TabStripPlacement="Left">
            <TabItem ToolTip="Personal Details">
                <TabItem.Header>
                    <Grid>
                        <Image Source="/Images/icons8-health-checkup-100.png"
                               Stretch="None"
                               Height="100"
                               VerticalAlignment="Top" />
                    </Grid>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl Content="{Binding PersonalDetailsTab}" />
                </TabItem.Content>
            </TabItem>

            <TabItem Name="physicians"
                     ToolTip="Physicians">
                <TabItem.Header>
                    <Grid>
                        <Image Source="/Images/icons8-stethoscope-96.png"
                               Stretch="None" />
                    </Grid>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl Content="{Binding PhysiciansVm}" />
                </TabItem.Content>
            </TabItem>

            <TabItem Name="drugs"
                     ToolTip="Drugs">
                <TabItem.Header>
                    <Grid>
                        <Image Source="/Images/icons8-pill-90.png"
                               Stretch="None" />
                    </Grid>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl Content="{Binding DrugsVm}" />
                </TabItem.Content>
            </TabItem>

            <TabItem Name="statistics"
                     ToolTip="Statistics">
                <TabItem.Header>
                    <Grid>
                        <Image Source="/Images/icons8-statistics-90.png"
                               Stretch="None" />
                    </Grid>
                </TabItem.Header>
                <TabItem.Content>
                    <ContentControl Content="{Binding StatisticsVm}" />
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </StackPanel>
    
</UserControl>
