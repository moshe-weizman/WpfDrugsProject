<UserControl x:Class="Drugs2020.PL.Views.PatientSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Drugs2020.PL.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Width="299">
        <TextBlock Text="Patient ID:"
                   TextWrapping="Wrap" />
        <TextBox x:Name="PatientIDTextBox"
                 Text="{Binding PatientId}"
                 Height="23"
                 TextWrapping="Wrap" />
        <Button x:Name="SearchButton"
                Command="{Binding PatientSelectionCommand}"
                CommandParameter="{Binding Text, ElementName=PatientIDTextBox}"
                Content="Search" />
            <Button Content="Back" Command="{Binding BackCommand}"/>

        </StackPanel>
    <Image Source="/Images/medicine.jpg"
               Stretch="UniformToFill"
               Grid.Column="1"
               Grid.ColumnSpan="1" />
    </Grid>
</UserControl>
