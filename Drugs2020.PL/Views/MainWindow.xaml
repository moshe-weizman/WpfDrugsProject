<Window x:Class="Drugs2020.PL.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Drugs2020.PL"
        xmlns:uc="clr-namespace:Drugs2020.PL.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.Resources>
        <!--<local:MyConverter x:Key="myConverter" />-->
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>
        <Image Source="/Images/medicine.jpg"
               Stretch="UniformToFill" Grid.Column="1" Margin="5"/>
        <ContentControl Content="{Binding CurrentVm}" Grid.Column="0" />
        <ContentControl Content="{Binding RightCurrentVm}" Grid.Column="1" />

    </Grid>
</Window>
