<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Drugs2020.PL"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style BasedOn="{StaticResource MaterialDesignRaisedButton}"  TargetType="Button">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Height" Value="50" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="10"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Background" Value="#FF2DA8A0"/>
        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth3"/>
        <Setter Property="FontFamily" Value="Microsoft JhengHei UI Light"/>
    </Style>
</ResourceDictionary>